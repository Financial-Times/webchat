<form accept-charset="utf-8">
	<div class="o-grid-row">
		<div data-o-grid-colspan="8">
			<textarea class="new-msg"></textarea>
			{{#keyTextEnabled}}
				<input type="text" class="key-text webchat-hidden" placeholder="{{insertKeyText}}" value="" />
			{{/keyTextEnabled}}

			<div class="emoticons">
				<ul>
					{{#emoticons}}
						<li><img alt="Emoticon" src="{{imgUrl}}" /></li>
					{{/emoticons}}
				</ul>
			</div>
		</div>
		<div data-o-grid-colspan="4">
			<div class="options">
				{{#isEditor}}
					<div class="session-options">
						<a href="#" class="session-control">
							{{#sessionInProgress}}
								End
							{{/sessionInProgress}}
							{{^sessionInProgress}}
								Start
							{{/sessionInProgress}}
							session now
						</a>
					</div>
				{{/isEditor}}
				
				<label>
					<input type="checkbox" class="check opt-send-on-enter" /> Send on [enter]
				</label>
				
				<br />
				
				<label>
					<input type="checkbox" class="check opt-quote" /> Send as quote
				</label>
				
				{{#keyTextEnabled}}
					<br />

					<label class="key-label">
						<input type="checkbox" class="check key-event-check"> Key event
					</label>
				{{/keyTextEnabled}}

				<br />
				<br />

				<button type="button" class="submit button">Send</button>

				<br />

				<div class="wiki-key">
					<span class="highlight">*</span>bold<span class="highlight">*</span>
					<br/>
					<span class="highlight">/</span>italics<span class="highlight">/</span>
					<br/>
					<span class="highlight">&gt;</span>block quote
					<br/>
					<span class="highlight">[</span>http://url.com Link<span class="highlight">]</span>
					<br/>
				</div>
			</div>
		</div>
	</div>
</form>

