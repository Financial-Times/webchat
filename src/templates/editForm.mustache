<div class="webchat-msg-editform clearfix">
	<form>
		<div class="o-grid-row">
			<div data-o-grid-colspan="8">
				<textarea class="msgtext">{{message}}</textarea>

				{{#keyEventEnabled}}
					<input class="key-text" name="keytext" value="{{keyText}}"></input>
				{{/keyEventEnabled}}
			</div>
			<div data-o-grid-colspan="4">
				<div class="options">
					<button class="btn-cancel button" type="button">Cancel</button>
					<div class="isblockquote">
						<label>
							<input type="checkbox" name="isblockquote" {{#isBlockquote}}checked{{/isBlockquote}} />
							Send as quote
						</label>
					</div>

					{{#keyEventEnabled}}
						<label>
							<input type="checkbox" class="check key-event" name="iskeyevent" {{#keyText}}checked{{/keyText}} />
							Key event
						</label>
					{{/keyEventEnabled}}

					<button class="btn-save button" type="button">Save changes</button>
				</div>
			</div>
		</div>
	</form>
</div>
